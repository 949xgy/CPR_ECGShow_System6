<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:overScrollMode="ifContentScrolls">



    <LinearLayout
        android:id="@+id/layout_update_pass"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:minWidth="200dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:layout_marginTop="30dp"

        >


        <EditText
            android:id="@+id/update_doctorOldPass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/re_password"
            android:hint="原密码"
            android:minHeight="45dp"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/update_doctorNewPass1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/re_password"
            android:hint="新密码"
            android:minHeight="45dp"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/update_doctorNewPass2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/re_password"
            android:hint="再次确认新密码"
            android:minHeight="45dp"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_update_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:text="修改" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:background="@drawable/shape"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="返回" />

        </LinearLayout>




    </LinearLayout>

</ScrollView>