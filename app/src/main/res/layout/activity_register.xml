<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_app_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back_bar"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/text_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="注册界面"
            android:textSize="22dp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名:"
                android:drawableLeft="@drawable/re_user"
                android:textSize="25sp"
                android:layout_marginBottom="5dp">

            </TextView>

            <EditText
                android:id="@+id/et_doctorName"
                android:hint="请输入用户名!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:drawableLeft="@drawable/re_password"
                android:textSize="25sp"
                android:layout_marginBottom="10dp">

            </TextView>

            <EditText
                android:id="@+id/et_doctorPass"
                android:hint="请输入密码!"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号:"
                android:drawableLeft="@drawable/re_phone"
                android:textSize="25sp"
                android:layout_marginBottom="10dp">

            </TextView>

            <EditText
                android:id="@+id/et_doctorPhone"
                android:hint="请输入手机号!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号:"
                android:drawableLeft="@drawable/re_id"
                android:textSize="25sp"
                android:layout_marginBottom="10dp">

            </TextView>

            <EditText
                android:id="@+id/et_doctorID"
                android:hint="请输入身份证号!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄:"
                android:drawableLeft="@drawable/re_age"
                android:textSize="25sp"
                android:layout_marginBottom="10dp">

            </TextView>

            <EditText
                android:inputType="number"
                android:id="@+id/et_doctorAge"
                android:hint="请输入年龄!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在科室:"
                android:drawableLeft="@drawable/re_department"
                android:textSize="25sp"
                android:layout_marginBottom="10dp">

            </TextView>

            <EditText
                android:id="@+id/et_doctorDept"
                android:hint="请输入科室!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职务:"
                android:drawableLeft="@drawable/re_job"
                android:textSize="25sp"
                android:layout_marginBottom="10dp">

            </TextView>

            <EditText
                android:id="@+id/et_doctorDuty"
                android:hint="请输入职务!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱:"
                android:drawableLeft="@drawable/re_email"
                android:textSize="25sp"
                android:layout_marginBottom="10dp">

            </TextView>

            <EditText
                android:id="@+id/et_doctorEmail"
                android:hint="请输入邮箱!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别:"
                    android:textSize="25dp"
                    >

                </TextView>

                <RadioGroup
                    android:id="@+id/doctorSex"
                    android:layout_weight="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:gravity="center_horizontal"
                    >
                    <RadioButton
                        android:id="@+id/man"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:layout_marginRight="130dp"
                        >

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女">

                    </RadioButton>
                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/btn_registerRegister"
                android:layout_marginTop="10dp"
                android:text="注册"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </Button>

            <Button
                android:id="@+id/btn_back"
                android:layout_marginTop="10dp"
                android:text="返回"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </Button>


        </LinearLayout>



    </ScrollView>


</LinearLayout>
