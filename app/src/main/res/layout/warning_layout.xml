<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warning_border">
    <ImageView
        android:id="@+id/id_warning_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:src="@drawable/warning"/>

    <TextView
        android:id="@+id/id_warning_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/id_warning_icon"
        android:layout_toEndOf="@+id/id_warning_icon"
        android:textSize="24sp"
        android:textColor="#ff0000"
        android:text="Condition:" />

    <TextView
        android:id="@+id/id_warning_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/id_warning_title1"
        android:layout_alignBaseline="@+id/id_warning_title1"
        android:layout_marginStart="5dp"
        android:textSize="24sp"
        android:textColor="#ff0000"
        android:text="Blood pH is too low"/>

    <TextView
        android:id="@+id/id_warning_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_warning_title1"
        android:layout_alignStart="@+id/id_warning_title1"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="#ff0000"
        android:text="Treatment:" />

    <TextView
        android:id="@+id/id_warning_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/id_warning_title2"
        android:layout_alignBaseline="@+id/id_warning_title2"
        android:layout_marginStart="5dp"
        android:textSize="24sp"
        android:textColor="#ff0000"
        android:text="Injecting bicarbonate ?"/>

    <Button
        android:id="@+id/id_warning_ok"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:text="OK"/>

</RelativeLayout>