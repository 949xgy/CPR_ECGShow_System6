<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/include_layout_workflow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_ib_locate"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:background="@drawable/button_border"
            android:src="@drawable/locate" />

        <ImageView
            android:id="@+id/id_ib_scale_up"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:background="@drawable/button_border"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/scale_up" />

        <ImageView
            android:id="@+id/id_ib_scale_down"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:background="@drawable/button_border"
            android:src="@drawable/scale_down" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:background="@drawable/button_border"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="false"
            android:padding="5dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/question_mark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="VF Algorithm" />

    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_CS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="Connection Status"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/cs_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/green_background"
            android:textSize="16sp"
            android:text="Tablet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/green_background"
            android:textSize="16sp"
            android:text="VP"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/green_background"
            android:textSize="16sp"
            android:text="WF Manager"/>

    </LinearLayout>

</LinearLayout>
