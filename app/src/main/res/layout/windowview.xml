<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="状态"
        android:textColor="#ff0000"
        android:gravity="center"
        android:textSize="40sp"
        android:id="@+id/State"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:id="@+id/icon_pushdep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深度 :" />
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/pushdep_del"
                    android:text="操作"
                    android:layout_toRightOf="@+id/icon_pushdep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#ff0000"

                    android:textSize="20sp"
                    android:id="@+id/icon_pushfreq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_pushdep"
                    android:text="频率 :" />
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/pushfreq_del"
                    android:text="操作"
                    android:layout_below="@+id/pushdep_del"
                    android:layout_toRightOf="@+id/icon_pushfreq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:id="@+id/springback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_pushfreq"
                    android:text="回弹 :" />
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/springback_del"
                    android:text="操作"
                    android:layout_toRightOf="@+id/springback"
                    android:layout_below="@+id/pushfreq_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textColor="#ff0000"
                android:id="@+id/tip_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="操作提示："
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="#ff0000"

                android:id="@+id/icon_spo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPO2: " />
            <TextView
                android:textSize="20sp"
                android:id="@+id/state_spo2"
                android:text="状态"
                android:layout_toRightOf="@+id/icon_spo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:textColor="#ff0000"
                android:text="当spo2异常时操作"
                android:id="@+id/opration_spo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:id="@+id/icon_BP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"

                android:text="BP :" />
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/state_BP"
                    android:text="状态"
                    android:layout_toRightOf="@+id/icon_BP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:text="当BP异常时操作"
                android:textColor="#ff0000"

                android:id="@+id/opration_BP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:id="@+id/icon_pao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"

                android:text="PaO2 :" />
            <TextView
                android:textSize="20sp"
                android:id="@+id/state_pao2"
                android:text="状态"
                android:layout_toRightOf="@+id/icon_pao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:text="当PaO2异常时操作"
                android:textColor="#ff0000"

                android:id="@+id/opration_pao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/icon_paco2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"

                    android:text="PaCO2 :" />
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/state_pcao2"
                    android:text="状态"
                    android:layout_toRightOf="@+id/icon_paco2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:text="当PaCO2异常时操作"
                android:id="@+id/opration_paco2"
                android:textColor="#ff0000"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/icon_ph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"

                    android:text="PH :" />
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/state_ph"
                    android:text="状态"
                    android:layout_toRightOf="@+id/icon_ph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:text="当PH异常时操作"
                android:textColor="#ff0000"

                android:id="@+id/opration_ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>