<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re_user"
            android:layout_margin="10dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/list_showInpatientInfo_item_name"
            android:textSize="30dp"
            android:text="姓名"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re_sex"
            android:layout_margin="10dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/list_showInpatientInfo_item_sex"
            android:textSize="30dp"
            android:text="性别"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re_age"
            android:layout_margin="10dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/list_showInpatientInfo_item_age"
            android:textSize="30dp"
            android:text="年龄"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re_department"
            android:layout_margin="10dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/list_showInpatientInfo_item_room"
            android:textSize="30dp"
            android:text="房间号"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re_phone"
            android:layout_margin="10dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/list_showInpatientInfo_item_phone"
            android:textSize="30dp"
            android:text="家属联系方式"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            >

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re_id"
            android:layout_margin="10dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/list_showInpatientInfo_item_id"
            android:textSize="30dp"
            android:text="身份证"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/re_user"
            android:layout_margin="10dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/list_showInpatientInfo_item_doctor"
            android:textSize="30dp"
            android:text="主治医生"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            >

        </TextView>

    </LinearLayout>

</LinearLayout>